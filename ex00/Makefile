#==============================================================================#
#                                  MAKE CONFIG                                 #
#==============================================================================#

MAKE	= make -C
SHELL	:= bash

#==============================================================================#
#                                     NAMES                                    #
#==============================================================================#

UNAME			= $(shell uname)
NAME			= cpp00

###	Message Vars
_NAME			= [$(MAG)cpp$(D)]
_SUCCESS		= [$(GRN)Success!$(D)]
_INFO			= [$(BLU)INFO$(D)]
_SEP			= ======================

#==============================================================================#
#                                    PATHS                                     #
#==============================================================================#

SRC_PATH		= src
BUILD_PATH		= .build
TEMP_PATH		= .temp

### Files Source
FILES = megaphone.cpp

### Paths
SRC		= $(addprefix $(SRC_PATH)/, $(FILES))

OBJS	= $(SRC:$(SRC_PATH)/%.c=%$(BUILD_PATH)/%.o)

#==============================================================================#
#                              COMPILER & FLAGS                                #
#==============================================================================#

CC		= -std=cpp++98

CFLAGS	= -Wall -Wextra -Werror -g

